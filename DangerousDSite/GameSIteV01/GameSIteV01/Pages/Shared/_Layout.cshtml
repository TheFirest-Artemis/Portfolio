<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameSIteV01</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GameSIteV01.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow mb-3" style="border-color:darkmagenta; border-bottom:solid;">
            <div class="container">
                <a id="account" style="font-weight:bold;" class="navbar-brand" asp-area="" asp-page="/Index">DangerousD</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
@*                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Login">Login</a>
                        </li>*@
                        <li class="nav-item">
                            <a asp-area="" asp-page="/AboutUs" class="nav-link text-white" style="font-weight:bold;">Наша команда</a>
                        </li>
                        <li class="nav-item">
                            <a href="https://github.com/progtime-net/DangerousD" target="_blank" class="nav-link text-white"  style="font-weight:bold;">Проект на GitHub</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Game/kat.jpg" download="kat.jpg" class="nav-link text-white" style="font-weight:bold;">Скачать игру</a>
                        </li>
                    </ul>
                    <partial>
                        <ul class="navbar-nav flex-grow-1">
                            @if (User.Identity.IsAuthenticated)
                            {
                            <li class="nav-item">
                                    <a style="font-weight:bold;" class="nav-link text-white" asp-area="" asp-page="/UserAccount">Привет <b style="color:darkmagenta">@User.Identity?.Name</b>!</a>
                            </li>
                            <li class="nav-item">
                                <a style="font-weight:bold;" class="nav-link text-white" href="/logout">Выйти</a>
                            </li>
                            }
                            else
                            {
                            <li class="nav-item">
                                <a style="font-weight:bold;" class="nav-link text-white" asp-area="" asp-page="/Registration">Регистрация</a>
                            </li>
                            <li class="nav-item">
                                <a style="font-weight:bold;" class="nav-link text-white" asp-area="" asp-page="/Login">Вход</a>
                            </li>
                            }
                        </ul>

                    </partial>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted" style="border-color:darkmagenta; border-top:solid;">
        <div class="container">
            &copy; 2023 - GameSIteV01
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>

</script>