@page
@model GameSIteV01.Pages.RegistrationModel

@{
    ViewData["Title"] = "Registration";
}

<html>
    <body style="background-color:#1c1c1c">
                <h1 style="text-align:center; color:darkmagenta;"><b>Регистрация</b></h1>
<div style="display: flex;
  justify-content: center;">
    <div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h6 style="font-size:x-large; color:white; text-align:center;">Никнейм</h6>
                <input asp-for="UserModel.UserName" class="form-control" style="width:200px; height:40px; font-size:large;"/>
                <span asp-validation-for="UserModel.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6 style="font-size:x-large; color:white; text-align:center;">Email</h6>
                <input asp-for="UserModel.Email" class="form-control" style="width:200px; height:40px; font-size:large;"/>
                <span asp-validation-for="UserModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group" style="align-content:center;">
                <h6 style="font-size:x-large; color:white; text-align:center;">Пароль</h6>
                <input asp-for="UserModel.Password" class="form-control" style="width:200px; height:40px; font-size:large;"/>
                <span asp-validation-for="UserModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6 style="font-size:x-large; color:white; text-align:center;">Подтверждение</h6>
                <input asp-for="UserModel.ConfirmPassword" class="form-control" style="width:200px; height:40px; font-size:large;"/>
                <span asp-validation-for="UserModel.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:10px;">
                <input type="submit" value="Создать" class="btn text-white" style="background-color:darkmagenta; width:200px; height:40px; font-size:large;"/>
            </div>
        </form>
    </div>
</div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
